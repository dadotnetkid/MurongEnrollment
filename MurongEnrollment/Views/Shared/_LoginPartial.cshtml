@using Microsoft.AspNet.Identity
<div class="container">
    <div class="row">
        @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetFullName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="@Url.Action("logoff","member")">Log off</a></li>
            </ul>

    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li>@Html.ActionLink("Log in", "Login", "member", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
    </div>
</div>